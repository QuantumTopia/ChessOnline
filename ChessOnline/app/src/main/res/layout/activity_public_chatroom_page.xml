<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".PublicChatroomPage"
    android:orientation="vertical"
    >

    <ScrollView
        android:id="@+id/conversation_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <LinearLayout
            android:id="@+id/conversations_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="0dp"
            >

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <EditText
            android:id="@+id/send_message_edit_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="Enter message"
            android:singleLine="true"
            />

        <Button
            android:layout_height="45dp"
            android:layout_width="45dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:onClick="sendMessage"
            android:gravity="center|center"
            />

        <Button
            android:layout_height="45dp"
            android:layout_width="45dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:onClick="getMessage"
            android:gravity="center|center"
            />

    </LinearLayout>

</LinearLayout>
